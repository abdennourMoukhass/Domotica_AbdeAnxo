esphome: 
  name: esphome-web-097404
  friendly_name: ESP32_IoT4

esp32: 
  board: nodemcu-32s
  framework:
    type: arduino

# Enable logging
logger:

# Enable Home Assistant API
api:
  encryption:
    key: "your_key"

ota:


wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "Esphome-Web-097404"
    password: "your_password"

captive_portal:

sensor: #Configuración e conectividade no GPIO4 do sensor DHT11 para captar a humidade e temperatura da sala cada 5 segundos
  - platform: dht
    model: DHT11
    pin: GPIO4
    temperature:
      name: "Temperatura"
      id: "T"
    humidity:
      name: "Humidade"
      id: "H"
    update_interval: 5s

switch: #Conectividade do relé no GPIO26
  - platform: gpio
    name: "Relé"
    pin: GPIO26

light: #Configuración do LED 
  - platform: binary
    name: "Luz Led"
    output: light_output

output: #Conectividade do LED no GPIO16
  - id: light_output
    platform: gpio
    pin: GPIO16

binary_sensor: #Configuración e conectividade do botón no GPIO17
  - platform: gpio
    pin: GPIO17
    name: "Botón"
    device_class: window

i2c: #Conectividade dos pins sda e scl do LCD nos pins GPIO21 e GPIO22 respectivamente
  sda: GPIO21
  scl: GPIO22

display: #Configuración do LCD para amosar os valores de humidade e temperatura captados polo sensor DHT11
  - platform: lcd_pcf8574
    dimensions: 16x2
    address: 0x27
    lambda: |-
      it.printf(2,0,"%.1f",id(T).state);
      it.printf(2,1,"%.1f",id(H).state);
      it.print(0,0,"T=");
      it.print(0,1,"H=");
